<%- model_class = @photo.class -%>
<div class="row">
<div class="span8">
    	  <div class="row" id="photoinfo">
		<div class="span1">
		  <div id="picvotes<%= @photo.id %>" style="text-align:center">
		    <h4>Silly Score:</h4>
		    <h4><%= @photo.votes.count %></h4>
		  </div>		 
		  <div id="vote_form<%= @photo.id %>">   		  
		    <% if user_signed_in? %>
		    <% if current_user==@photo.user_id %>
		    <% else %>
 		    <%= render 'static_pages/like_form', :photo => @photo %>
			<% end %>
		    <% end %>
		  </div>
		  <div id="deletephoto">
			<% if @photo.user_id == current_user.id %> 
 	<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              photo_path(@photo),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
	<% end %>
		</div>
		</div>
		<div class="span7" id="photo">
		  <%= image_tag @photo.image.url %>
      		<h3><%= @photo.content %></h3>
		</div>
	  </div>


</div>
<div class="span4">
<%= render 'static_pages/sidebar' %>
</div>
</div>
